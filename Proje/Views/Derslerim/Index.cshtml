@using Proje.ViewModels
@model DerslerimDetailViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Derslerim</h2>
<table class="table table-bordered">
    <thead>
    <th>Fakülte</th>
    <th>Bölüm</th>
    <th>Dönem</th>
    <th>Ders</th>
    <th>Sınav Türü</th>
    </thead>
    <tbody>
        @foreach (var derslerim in Model.derslerimDetail)
        {
        <tr>
            <td>@derslerim.Fakulte_Adi</td>
            <td>@derslerim.Bolum_Adi</td>
            <td>@derslerim.Donem_Adi</td>
            <td>@derslerim.Ders_Adi</td>
            <td><a href="/Derslerim/OpenExcel/@derslerim.Id">@derslerim.Sinav_Turu_Adi</a></td>
        </tr>
        }
    </tbody>
</table>

