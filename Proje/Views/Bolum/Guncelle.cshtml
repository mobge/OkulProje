@using Proje.ViewModels
@model BolumDetailViewModel
@{
    /**/

    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Bölüm Güncelle</h2>
@using (Html.BeginForm("Guncelle", "Bolum", FormMethod.Post))
{
    <div class="form-group" style="height:100% !important;">
        <label>Fakülte Seçiniz:</label>
        @Html.DropDownListFor(m => m.UpdatedBolum.Fakulte_No, new SelectList(Model.Fakulte, "Fakulte_No", "Fakulte_Adi", Model.UpdatedBolum.Fakulte_No), (Model.Fakulte != null ? Model.UpdatedBolum.Fakulte_Adi : "Seçiniz"), new { @class = "form-control", style = "height:100%", required = "required" })
        @Html.ValidationMessageFor(m => m.UpdatedBolum.Fakulte_No, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Bölüm Adı:</label>
        @Html.TextBoxFor(m => m.UpdatedBolum.Bolum_Adi, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(m => m.UpdatedBolum.Bolum_Adi, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Bölüm Yeterlilik: </label>
        @Html.TextAreaFor(m => m.UpdatedBolum.Bolum_Yeterlilik, new { @class = "form-control", required = "required", @placeholder = "Lütfen Kazanımları alt alta ekleyiniz ve son kazanımdan sonra bir satır boşluk bırakınız." })
        @Html.ValidationMessageFor(m => m.UpdatedBolum.Bolum_Yeterlilik, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <span style="color:red;">@ViewBag.Mesaj</span>
    @Html.HiddenFor(m => m.UpdatedBolum.Bolum_Id)
    @Html.HiddenFor(m => m.UpdatedBolum.Bolum_Kazanim_Id)
}

