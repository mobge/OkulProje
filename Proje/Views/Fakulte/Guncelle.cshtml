@model Proje.Models.Fakulte
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Fakülte Güncelle</h2>
@using (Html.BeginForm("Guncelle", "Fakulte", FormMethod.Post))
{
    <div class="form-group">
        <label>Fakülte Numarası:</label>
        @Html.TextBoxFor(m => m.Fakulte_No, new { @class = "form-control", @readonly="readonly" })
        @Html.ValidationMessageFor(m => m.Fakulte_No, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Fakülte Adı:</label>
        @Html.TextBoxFor(m => m.Fakulte_Adi, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(m => m.Fakulte_Adi, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
}

