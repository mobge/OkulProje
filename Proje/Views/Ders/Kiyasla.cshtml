@*@using Proje.Controllers*@
@using Proje.ViewModels
@model DersViewModel
@{
    ViewBag.Title = "Kiyasla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Excel", "Ders", FormMethod.Post))
{
    <html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    </head>
    <body>
        <h2>Sınav Bilgileri</h2>
        <button type="submit" class="btn btn-primary">Excel Aktar</button>
        <table class="table table-bordered">
            <thead>
            <th></th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Numara</th>
            <th>Grup</th>
            <th>Cevap</th>
            <th>Puan</th>
            </thead>
            @for (int satir = 0; satir < ViewBag.sayici; satir++)
            {
                <tbody>
                    <tr>
                        <td><h5>@satir</h5></td>
                        <td>@Html.TextBoxFor(m => m.ad[satir], new { @class = "form-control" })</td>
                        <td>@Html.TextBoxFor(m => m.soyad[satir], new { @class = "form-control" })</td>
                        <td>@Html.TextBoxFor(m => m.numara[satir], new { @class = "form-control" })</td>
                        <td>@Html.TextBoxFor(m => m.grup[satir], new { @class = "form-control" })</td>
                        <td>@Html.TextBoxFor(m => m.ogrCevap[satir], new { @class = "form-control" })</td>
                        <td>@Html.TextBoxFor(m => m.ogrPuan[satir], new { @class = "form-control" })</td>
                    </tr>
                </tbody>

            }
        </table>
    </body>
</html>
}


